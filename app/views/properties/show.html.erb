<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>家賃:</strong>
  <%= @property.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<% i = 0 %>
<% @property.stations.each do |f| %>
  <% if @property.stations.any? %>
<h3>最寄り駅<%= i +=1 %></h3>
    <p>路線名：<%= f.line %></p>
    <p>駅名：<%= f.name %></p>
    <p>徒歩分数：<%= f.walk %>分</p>
  <% end %>
<% end %>


<%= link_to 'Edit', edit_property_path(@property) %> |
